  "spreads": [
    {
      "id": "line-3",
      "name": "Three Card Line",
      "description": "Simple past-present-future or subject-verb-object reading. Read left to right as a sentence.",
      "layout": "horizontal-3",
      "category": "quick",
      "difficulty": "beginner",
      "positions": [
        {
          "name": "First Card",
          "role": "first",
          "short_description": "Subject / Past / Topic",
          "detailed_description": "The first card sets the subject or topic of the reading. In temporal readings, this represents the past or what came before.",
          "keywords": ["subject", "topic", "past", "foundation", "beginning"]
        },
        {
          "name": "Middle Card",
          "role": "middle",
          "short_description": "Connector / Present / Action",
          "detailed_description": "The middle card connects and modifies the reading. It represents what is happening now, the action, or how the cards relate.",
          "keywords": ["action", "connection", "present", "bridge", "modifier"]
        },
        {
          "name": "Last Card",
          "role": "last",
          "short_description": "Outcome / Future / Answer",
          "detailed_description": "The final card provides the outcome, answer, or future direction. It concludes the sentence the cards are forming.",
          "keywords": ["outcome", "answer", "future", "conclusion", "result"]
        }
      ]
    },
    {
      "id": "line-5",
      "name": "Five Card Line",
      "description": "Extended reading with more context. The center card is the focus, flanked by modifiers on each side.",
      "layout": "horizontal-5",
      "category": "general",
      "difficulty": "beginner",
      "positions": [
        {
          "name": "Far Past / Deep Context",
          "role": "first",
          "short_description": "Distant past or deep background",
          "detailed_description": "The furthest context - what came long before or underlying influences.",
          "keywords": ["distant", "background", "root", "origin"]
        },
        {
          "name": "Recent Past / Near Context",
          "role": "middle",
          "short_description": "Recent events or immediate context",
          "detailed_description": "What recently happened or immediate influences on the focus.",
          "keywords": ["recent", "immediate", "approaching", "influence"]
        },
        {
          "name": "Focus / Present",
          "role": "middle",
          "short_description": "Central focus of the reading",
          "detailed_description": "The heart of the matter - what the reading centers on.",
          "keywords": ["focus", "center", "present", "core", "heart"]
        },
        {
          "name": "Near Future / Emerging",
          "role": "middle",
          "short_description": "What's emerging or near future",
          "detailed_description": "What is developing or will soon manifest.",
          "keywords": ["emerging", "developing", "near", "forming"]
        },
        {
          "name": "Outcome / Destination",
          "role": "last",
          "short_description": "Final outcome or destination",
          "detailed_description": "Where things are heading - the culmination of the reading.",
          "keywords": ["outcome", "destination", "result", "future"]
        }
      ]
    }
  ],

